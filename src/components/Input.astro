---
interface Props {
  id: string;
  label?: string;
  placeholder?: string;
  type?: string | "text" | "password" | "email" | "number";
}
const { id, label = "", placeholder = "", type = "text" } = Astro.props as Props;
---
<div class="mt-3 text-sm">
  <label for={id}>{label}</label>
  <input id={id} type={type} placeholder={placeholder} class="border-1 border-border rounded-lg p-2 w-full" />
</div> 