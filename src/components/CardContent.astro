---
interface Props {
  title?: string;
  subtitle?: string;
}
const { title = "Título por defecto", subtitle = "Subtítulo por defecto" } = Astro.props as Props;
---

<div class="flex flex-col w-full mt-3">
  <h2 class="text-center text-2xl font-bold w-full">{title}</h2>
  <p class="text-center w-full text-md text-gray-400">{subtitle}</p>
  <slot />
</div>